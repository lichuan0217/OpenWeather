<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_overview_current_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_8dp"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/overview_detail_item_height"
            android:layout_marginBottom="@dimen/margin_8dp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_detail_icon_wind"
                android:layout_width="@dimen/overview_detail_img_size"
                android:layout_height="@dimen/overview_detail_img_size"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/overview_detail_img_margin_left"
                android:src="@drawable/ic_overview_wind" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/overview_detail_description_margin_left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_detail_wind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="Wind"
                    android:textSize="@dimen/overview_detail_text_second" />

                <TextView
                    android:id="@+id/tv_detail_wind_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="5 km/h"
                    android:textColor="@color/overview_detail_text"
                    android:textSize="@dimen/overview_detail_text" />

            </LinearLayout>

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/overview_detail_description_margin_left"
            android:background="@color/divider_background" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/overview_detail_item_height"
            android:layout_marginBottom="@dimen/margin_8dp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_detail_icon_humidity"
                android:layout_width="@dimen/overview_detail_img_size"
                android:layout_height="@dimen/overview_detail_img_size"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/overview_detail_img_margin_left"
                android:src="@drawable/ic_overview_humidity" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/overview_detail_description_margin_left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_detail_humidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="Humidity"
                    android:textSize="@dimen/overview_detail_text_second" />

                <TextView
                    android:id="@+id/tv_detail_humidity_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="56 %"
                    android:textColor="@color/overview_detail_text"
                    android:textSize="@dimen/overview_detail_text" />

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/overview_detail_description_margin_left"
            android:background="@color/divider_background" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/overview_detail_item_height"
            android:layout_marginBottom="@dimen/margin_8dp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_detail_icon_pressure"
                android:layout_width="@dimen/overview_detail_img_size"
                android:layout_height="@dimen/overview_detail_img_size"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/overview_detail_img_margin_left"
                android:src="@drawable/ic_overview_pressure" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/overview_detail_description_margin_left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_detail_pressure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="Pressure"
                    android:textSize="@dimen/overview_detail_text_second" />

                <TextView
                    android:id="@+id/tv_detail_pressure_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="997.36 hPa"
                    android:textColor="@color/overview_detail_text"
                    android:textSize="@dimen/overview_detail_text" />

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/overview_detail_description_margin_left"
            android:background="@color/divider_background" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/overview_detail_item_height"
            android:layout_marginBottom="@dimen/margin_8dp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_detail_icon_clouds"
                android:layout_width="@dimen/overview_detail_img_size"
                android:layout_height="@dimen/overview_detail_img_size"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/overview_detail_img_margin_left"
                android:src="@drawable/ic_overview_cloud" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/overview_detail_description_margin_left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_detail_clouds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="Cloudiness"
                    android:textSize="@dimen/overview_detail_text_second" />

                <TextView
                    android:id="@+id/tv_detail_clouds_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Sky is clear"
                    android:textColor="@color/overview_detail_text"
                    android:textSize="@dimen/overview_detail_text" />

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>