<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <top.lemonsoda.openweather.view.ui.custom.HeaderViewPager
        android:id="@+id/vp_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/img_header_add_city"
        android:layout_width="@dimen/nav_header_add_size"
        android:layout_height="@dimen/nav_header_add_size"
        android:layout_gravity="top|right"
        android:layout_marginRight="@dimen/nav_header_add_margin_right"
        android:layout_marginTop="@dimen/nav_header_add_margin_top"
        android:src="@drawable/ic_add_black_24dp" />
</FrameLayout>
