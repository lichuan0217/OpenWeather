<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_daily_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_8dp">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/daily_item_touch"
        app:columnCount="2">

        <TextView
            android:id="@+id/tv_daily_current_date"
            android:layout_marginBottom="@dimen/daily_text_margin_top"
            android:layout_marginTop="@dimen/daily_text_margin_top"
            android:layout_marginLeft="@dimen/daily_text_margin_left"
            android:fontFamily="sans-serif"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/daily_text"
            app:layout_columnSpan="2"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal"
            tools:text="Monday" />

        <TextView
            android:id="@+id/tv_daily_weather_dec"
            android:layout_marginBottom="@dimen/daily_text_margin_top"
            android:layout_marginLeft="@dimen/daily_text_margin_left"
            android:fontFamily="sans-serif"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/daily_text_second"
            app:layout_columnSpan="2"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_vertical"
            tools:text="Clear all days...." />

        <ImageView
            android:id="@+id/img_daily_icon"
            android:layout_width="0dp"
            android:adjustViewBounds="true"
            android:maxHeight="@dimen/today_icon"
            android:maxWidth="@dimen/today_icon"
            app:layout_rowSpan="2"
            app:layout_columnWeight="2"
            app:layout_gravity="fill_horizontal"
            tools:src="@mipmap/art_clouds" />

        <TextView
            android:id="@+id/tv_daily_tmp"
            android:layout_width="0dp"
            android:fontFamily="sans-serif-light"
            android:layout_marginRight="@dimen/daily_text_margin_left"
            android:gravity="right"
            android:textColor="@color/daily_text"
            android:textSize="36sp"
            app:layout_columnWeight="3"
            app:layout_gravity="fill_horizontal"
            tools:text="19" />

        <TextView
            android:id="@+id/tv_daily_content"
            android:layout_width="0dp"
            android:layout_marginRight="@dimen/daily_text_margin_left"
            android:fontFamily="sans-serif-light"
            android:gravity="right"
            android:textColor="@color/daily_text_second"
            android:textSize="16sp"
            app:layout_columnWeight="3"
            app:layout_gravity="fill_horizontal"
            tools:text="Chance of rain/snow: 50%" />



    </android.support.v7.widget.GridLayout>

</android.support.v7.widget.CardView>